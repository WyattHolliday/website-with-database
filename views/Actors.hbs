<!-- index.hbs -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>



{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.actor_id}}</td>
            <td>{{this.actor_fname}}</td>
            <td>{{this.actor_lname}}</td>
            <td><button onclick="deleteActor({{this.actor_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_actor.js"></script>

<h2>Search Using an HTML Form</h2>
<p>Search for Actor name by using the field below. Partial names are OK too!</p>
<form id="search-actor-html" method='GET' action='/Actors'>
    <label for="input-lname">Search by Actor Last Name: </label>
    <input type="text" name="lname" id="input-lname-html-search">
    
    <input type="submit">
    <a href='/Actors'><button>Reset</button></a>
</form>



