<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>



{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.service_id}}</td>
            <td>{{this.service}}</td>
            <td>{{this.cost}}</td>
            <td><button onclick="deleteService({{this.service_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_service.js"></script>

<h2>Search Using an HTML Form</h2>
<p>Search for Actor name by using the field below. Partial names are OK too!</p>
<form id="search-service-html" method='GET' action='/Streaming_Services'>
    <label for="input-service_name">Search by Streaming Service name: </label>
    <input type="text" name="streaming_service" id="input-service-html-search">
    
    <input type="submit">
    <a href='/Streaming_Services'><button>Reset</button></a>
</form>



